{
  "name": "Minguo year conventor",
  "manifest_version": 2,
  "version": "2.0",
  "author": "iigmir",
  "description": "Change Minguo/Gregorian year to Gregorian/Minguo year by select bar.",
  "icons": {
    "48": "icons/kmt.svg"
  },
  "permissions": ["activeTab","storage","browserSettings"],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Minguo",
    "default_popup": "popup/year.html"
  },
  "options_ui": {
    "page": "settings/options.html"
  }
}
